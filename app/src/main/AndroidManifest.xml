<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cherryzp.animalshelter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_animal_shelter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_animal_shelter_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimalShelter"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".ui.main.bookmark.AbandonmentPublicBookmarkActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".ui.main.abandonmentpublic.DetailPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.abandonmentpublic.AbandonmentPublicDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" /> <!-- Sample AdMob app ID: ca-app-pub-3940256099942544~3347511713 -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2488110704514213~1612580944" />
    </application>

</manifest>