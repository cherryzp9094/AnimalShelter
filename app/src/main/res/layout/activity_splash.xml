<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.splash.SplashActivity"
        android:background="@color/blue_air_superiority">

        <ImageView
            android:id="@+id/animal_shelter_image_logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintVertical_chainStyle="packed"
            android:src="@drawable/animal_shelter_icon_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/animal_shelter_name_1_logo"/>

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/animal_shelter_name_1_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_regular"
            android:text="ANIMAL"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/animal_shelter_image_logo"
            app:layout_constraintLeft_toLeftOf="@id/animal_shelter_image_logo"
            app:layout_constraintRight_toLeftOf="@id/animal_shelter_name_2_logo"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/animal_shelter_name_2_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue_regular"
            android:text="SHELTER"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintTop_toTopOf="@id/animal_shelter_name_1_logo"
            app:layout_constraintLeft_toRightOf="@id/animal_shelter_name_1_logo"
            app:layout_constraintRight_toRightOf="@id/animal_shelter_image_logo"
            app:layout_constraintBottom_toBottomOf="@id/animal_shelter_name_1_logo"/>

        <!--        <ImageView-->
<!--            android:layout_marginTop="32dp"-->
<!--            android:id="@+id/animal_shelter_name_logo"-->
